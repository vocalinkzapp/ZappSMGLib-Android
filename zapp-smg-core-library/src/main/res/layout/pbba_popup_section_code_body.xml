<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pbba="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pbba_popup_ecom_body_margin_top"
    android:orientation="vertical"
    tools:showIn="@layout/pbba_popup_fragment_ecomm">

    <LinearLayout
        style="@style/PBBAPopup.EComm.Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/PBBAPopup.EComm.Item.Indicator"
            android:background="@drawable/pbba_popup_ecom_indicator_one_background"/>

        <com.zapp.library.merchant.view.CustomTextView
            android:id="@+id/pbba_popup_ecom_item_one_text"
            style="@style/PBBAPopup.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            pbba:htmlText="@string/pbba_popup_ecomm_item_one_text"
            tools:text="[Pick] up your phone or tablet"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <LinearLayout
        style="@style/PBBAPopup.EComm.Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/PBBAPopup.EComm.Item.Indicator"
            android:background="@color/pbba_popup_ecomm_indicator_two_color"/>

        <com.zapp.library.merchant.view.CustomTextView
            android:id="@+id/pbba_popup_ecom_item_two_text"
            style="@style/PBBAPopup.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            pbba:htmlText="@string/pbba_popup_ecomm_item_two_text"
            tools:text="[Log in] to your mobile banking app"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <LinearLayout
        style="@style/PBBAPopup.EComm.Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/PBBAPopup.EComm.Item.Indicator"
            android:background="@color/pbba_popup_ecomm_indicator_three_color" />

        <com.zapp.library.merchant.view.CustomTextView
            android:id="@+id/pbba_popup_ecom_item_three_text"
            style="@style/PBBAPopup.Text.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            pbba:htmlText="@string/pbba_popup_ecomm_item_three_text"
            tools:text="[Select] Pay by Bank app"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <LinearLayout
        style="@style/PBBAPopup.EComm.Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/PBBAPopup.EComm.Item.Indicator"
            android:layout_height="match_parent"
            android:background="@drawable/pbba_popup_ecom_indicator_four_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pbba_popup_ecomm_item_four_space"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <com.zapp.library.merchant.view.CustomTextView
                    android:id="@+id/pbba_popup_ecom_item_four_text_one"
                    style="@style/PBBAPopup.Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pbba:htmlText="@string/pbba_popup_ecomm_item_four_text_one"
                    tools:text="[Enter] the"/>

                <com.zapp.library.merchant.view.TintedImageView
                    android:id="@+id/pbba_popup_ecom_item_icon_symbol"
                    android:layout_width="@dimen/pbba_popup_ecomm_item_icon_symbol_width"
                    android:layout_height="@dimen/pbba_popup_ecomm_item_icon_symbol_height"
                    android:layout_marginLeft="@dimen/pbba_popup_ecomm_item_icon_symbol_margin_left"
                    android:src="@drawable/pbba_symbol_icon"
                    pbba:tint="@color/pbba_popup_foreground_color" />

                <com.zapp.library.merchant.view.TintedImageView
                    android:id="@+id/pbba_popup_ecom_item_code_textimage"
                    android:layout_width="@dimen/pbba_popup_ecomm_item_code_textimage_width"
                    android:layout_height="@dimen/pbba_popup_ecomm_item_code_textimage_height"
                    android:layout_marginLeft="@dimen/pbba_popup_ecomm_item_code_textimage_margin_left"
                    android:layout_marginRight="@dimen/pbba_popup_ecomm_item_code_textimage_margin_right"
                    android:src="@drawable/pbba_code_textimage"
                    pbba:tint="@color/pbba_popup_foreground_color" />

                <com.zapp.library.merchant.view.CustomTextView
                    android:id="@+id/pbba_popup_ecom_item_four_text_two"
                    style="@style/PBBAPopup.Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    pbba:htmlText="@string/pbba_popup_ecomm_item_four_text_two"
                    tools:text=" below"/>

            </LinearLayout>

            <include
                layout="@layout/pbba_popup_section_code_letters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>