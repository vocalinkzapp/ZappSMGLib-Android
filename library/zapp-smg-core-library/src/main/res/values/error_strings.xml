<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- All the error titles and messages can be customized by the Merchant Application. These are the default error titles and messages used in Merchant Library. -->

    <!-- Error title strings. -->
    <!-- The error title displayed for 'generic validation error'. -->
    <string name="zapp_error_title_generic_validation_error">Invalid data</string>
    <!-- The error title displayed for all the other error messages. -->
    <string name="zapp_error_title_generic">An error occurred</string>

    <!-- Error message strings. -->
    <!-- The Merchant Library supports for custom errors defined by the Merchant. This is the default error message for those messages. -->
    <string name="zapp_error_message_consumer">Consumer application error (A3.0).</string>
    <!-- Error message displayed in case or network connectivity lost or network is unavailable. -->
    <string name="zapp_error_message_network_error">General network error (A3.1).</string>
    <!-- The Mobile Gateway API requires APTR_ID in the Transaction object for the 'Notify Payment' and 'Get Payment Status' requests. -->
    <string name="zapp_error_msg_invalid_aptrid">Aptrid should not be empty (A3.2).</string>
    <!-- The Mobile Gateway API requires APT_ID in the Transaction object for the 'Get Payment Status' requests. -->
    <string name="zapp_error_msg_invalid_aptid">Aptid should not be empty (A3.3).</string>
    <!-- The Mobile Gateway API requires settlement retrieval id for 'Get Settlement Status' requests. -->
    <string name="zapp_error_msg_invalid_settlement_retrieval_id">Settlement retrieval id should not be empty (A3.11).</string>
    <!-- The Mobile Gateway API requires MERCHANT_ID in the Transaction object for the 'Get Payment Status' requests. -->
    <string name="zapp_error_msg_invalid_merchant_id">Invalid merchant id (A3.4).</string>
    <!-- The SMB payment requires Code in the Transaction. Merchant Library checks if the Code is generated after 'Initiate Payment' request completed on the Mobile Gateway. -->
    <string name="zapp_error_msg_invalid_brn">Code is missing for SMB transaction (A3.5).</string>
    <!-- The Merchant Library validates Merchant Service Delegate responses and throws this error if something is wrong with them. -->
    <string name="zapp_error_msg_service_delegate_response">Service delegate response error (A3.6).</string>
    <!-- The Mobile Gateway returns a specific error (HTTP 418 and 'errorCode' = 12) for 'Notify Payment' request when payment has not been confirmed.
        This error message is used to forward this event to the Merchant UI Delegate. -->
    <string name="zapp_error_msg_payment_not_confirmed">Payment not confirmed (A3.7).</string>
    <!-- The Merchant Library validates Mobile Gateway responses and throws this error if something is wrong with them. -->
    <string name="zapp_error_msg_invalid_server_response">Invalid server response (A3.8).</string>
    <!-- This is the default error message which is used if the Core Model classes are setup incorrectly. -->
    <string name="zapp_error_msg_generic_validation_error">Validation failed: field: %1$s (A3.9).</string>
    <!-- This is the default error message which is used if the Merchant Library cannot decide what the specific error is. -->
    <string name="zapp_error_msg_generic_internal_error">Library internal error: undefined error (A3.10).</string>

</resources>
