<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/pbba_popup_header"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pbba="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/pbba_popup_fragment_ecomm">

    <com.zapp.library.smg.core.ui.TintedImageView
        android:id="@+id/pbba_popup_close"
        style="@style/PBBAPopup.Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pbba_popup_close"
        pbba:tint="@color/pbba_popup_foreground_color" />

    <com.zapp.library.smg.core.ui.TintedImageView
        android:id="@+id/pbba_popup_pay_by_bank_app_logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pbba_popup_header_title_margin_top"
        android:src="@drawable/pbba_popup_pay_by_bank_app_textimage"
        pbba:tint="@color/pbba_popup_foreground_color" />

</RelativeLayout>