<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/SelectPaymentMethodDialog.PurchaseOption.Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/payment_method_image"
        style="@style/SelectPaymentMethodDialog.PurchaseOption.Image"
        tools:src="@drawable/payment_method_mastercard" />

    <TextView
        android:id="@+id/payment_method_text"
        style="@style/SelectPaymentMethodDialog.PurchaseOption.Label"
        tools:text="@string/payment_option_label_text_mastercard" />

</LinearLayout>

